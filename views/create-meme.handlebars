<section class="container h-max-content my-auto">
    <h3 class=" text-white mt-2">Lets add some text!</h3>

    <div class="d-flex justify-content-center position-relative my-2">
        <img id="memeImage" src="{{image.src.medium}}" data-image-tiny="{{image.src.tiny}}" data-image-medium="{{image.src.medium}}">
        <p class="bottom-0 position-absolute text-center w-100 text-white fs-1 fw-bold" id="displayCaption"></p>
    </div>      

    <form id="postMemeForm" class="mb-5 mt-2 mx-auto p-2 px-5">
        <div>
            <label for="caption" class="form-label">Please provide your caption</label>
            <input type="text" class="form-control" id="caption">
        </div>

        <div>
        <span>Where would you like your caption postioned ? </span>
            <div class="form-check form-check-inline">
                <input class="form-check-input text-position" type="radio" name="inlineRadioOptions" id="top" value="top">
                <label class="form-check-label" for="top">Top</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input text-position" type="radio" name="inlineRadioOptions" id="middle" value="Middle">
                <label class="form-check-label" for="Middle">Middle</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input text-position" type="radio" name="inlineRadioOptions" id="bottom" value="Bottom" checked>
                <label class="form-check-label" for="Bottom">Bottom</label>
            </div>
        </div>
     
        <button type="submit p-1">Create Post</button>
    </form>

</section>
<script src="../js/render-text.js"></script>
<script src="../js/create-post.js"></script>